@startuml
'!pragma teoz true
skinparam roundcorner 10

title
example of par2 usage
end title

!procedure $getAddr($Answer,$interval)
  HB -> MAC :  Get(*macAddr)
  MAC --> HB : $Answer
!endprocedure

!procedure $putAddr($Addr,$interval)
  R -> MAC :  Put($Addr)
!endprocedure

!procedure $lldp($Source,$Value,$interval)
  $Source -> R :  LLDP($Value)
!endprocedure

hide footbox

box "Device 1" #LightBlue
participant HB
database Storage as MAC
participant R
end box

box "Device 2" #LightGreen
participant C
participant CN
end box

== System Starts ==

par2

$getAddr(0,30)

else

$putAddr("MAC1",135)

else
$lldp("C","MAC1",10)


end
@enduml
